                                              <td> <button name="groupInviteBtn" class="groupInviteBtn" >Send Invite</button> </td>
                                         </form>
            
                                     <% } %>
                                       </tr>
                            <% n++; %>   
                        <% }) %>
                 <% } %>
                            </table> 
                
    
