                    <p id="searchTitle">Search Users</p>
                    
                    <form action="/searchUsers" method="POST">
                       
                    <% if(typeof groupName !== 'undefined'){ %>
                        <input type="text" name ="groupName" style="display:none" value = "<%= groupName%>">
