    <div class="page_content">


        <div  class="creatGroupHeader">

               <p id="gtitle"><i class="material-icons" style="font-size:25px">create</i> Create A New Group</p>
                  

                    <form action="/createGroups" method="POST">
                        <input type="text" name="userID" style="display:none" value = "<%= uID%>">    
                        <input type="text" name="groupName" class="searchField" placeholder="Group Name" required maxlength="20">
                     <button name="createGroup" class="createGroupBtn">Create Group </button>
                    
                    </form>

        </div>
        <hr class="divider">


        <div class="groupListHeader">

                <p id="g1title"><i class="material-icons" style="font-size:22px">group_work</i> Your Groups</p>

        </div>

        <div class="groupList">


            
                <table class="groupsListTable">

                        <% if(typeof groupList !== 'undefined'){ %>
                    
                                <% groupList.forEach(function(v){ %>

                            

                        <tr class="groupTableRow">

                
                            <form action="/editGroup" method="POST">

                                <td class="group"><span class="group"style="margin-left:20px;"><%= v.groupName%></span></td>
                                <td class="group"> <input type="text" name="userID" style="display:none" value = "<%= uID%>"> </td>
